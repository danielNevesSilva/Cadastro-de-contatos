@model ContatoModel

@{
    ViewData["Title"] = "Confimação de apagar o contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)</h3>

    
    <a class="btn btn-secondary btn-block" role="button" asp-controller="Contato" asp-action="Index"> Cancelar exclusão</a>
    <a class="btn btn-primary btn-block" role="button" asp-controller="Contato" asp-route-id="@Model.Id" asp-action="Apagar"> Confirmar exclusão</a>
</div>
